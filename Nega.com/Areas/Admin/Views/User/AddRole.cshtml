<form method="post" asp-action="AddRole">
    <table class="table">
        <thead>
            <tr>
                <th>Rol Adı</th>
                <th>Kullanıcıda Mevcut</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td>@Model[i].name</td>
                    <td>

                        <div>
                            <input id="s1_@Model[i].roleid" type="checkbox" asp-for="@Model[i].exist" class="switch">
                            <label for="s1_@Model[i].roleid">@Model[i].name</label>
                        </div>

                        <input type="hidden" asp-for="@Model[i].roleid" />
                        <input type="hidden" asp-for="@Model[i].name" />

                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-success">Update</button>
