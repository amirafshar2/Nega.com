@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Register</title>

    <link href="~/AdminTema/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/AdminTema/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/AdminTema/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/AdminTema/css/animate.css" rel="stylesheet">
    <link href="~/AdminTema/css/style.css" rel="stylesheet">

</head>
@{
    bool i = false;
}
<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <img src="~/simba/negadark.png" style="width:60%;" />

            </div>

            <h3>Register to Nega</h3>
            <p>Create account to see it in action.</p>
            <form class="m-t" role="form" action="Reqister" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Name" name="Name" required="">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="SurName" name="SureName" required="">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="User Name" name="User" required="">
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="Email" name="Email" required="">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Password" name="Password" required="">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Password Confirm" name="ConfirmPassword" required="">
                </div>
                <div class="form-group">
                    <div class="checkbox i-checks"><label> <input type="checkbox" id="chek"><i></i> Agree the terms and policy </label></div>
                </div>
              
            
               
                <button type="submit" id="btn" class="btn btn-primary block full-width m-b" disabled>Register</button>

            


                <p class="text-muted text-center"><small>Already have an account?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="~/Admin/Login/Index">Login</a>
                <div class="form-group row">
                    <label class=" col-form-label text-danger">@Html.ValidationSummary()</label>
                </div>
            </form>
            
            <p class="m-t"> <small> @DateTime.Now.Year</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/AdminTema/js/jquery-3.1.1.min.js"></script>
    <script src="~/AdminTema/js/popper.min.js"></script>
    <script src="~/AdminTema/js/bootstrap.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- iCheck -->
    <script src="~/AdminTema/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
       
        $('#chek').on('ifChanged', function (event) {
            if ($(this).is(':checked')) {
                $('#btn').removeAttr('disabled');
            } else {
                $('#btn').attr('disabled', 'disabled');
            }
        });


    </script>
</body>

</html>
