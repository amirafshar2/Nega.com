    <div class="" mt-5 mb-5">
        <div class="row">
            <div class="col-md-3 border-right">
                <div class="d-flex flex-column align-items-center text-center "><img class="rounded-circle mt-5" width="150px" src="~/image/Pack/@Model.picstring"><span class="font-weight-bold">@Model.Name  @Model.Family</span><span class="text-black-50">@Model.Email</span><span> </span></div>
            </div>
            <div class="col-md-9 border-right">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Profile Settings</h4>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6"><label class="labels">Name</label><input type="text" class="form-control"  placeholder="" value="@Model.Name"></div>
                        <div class="col-md-6"><label class="labels">Surname</label><input type="text" class="form-control" value="@Model.Family" placeholder=""></div>
                        <div class="col-md-6"><label class="labels">UserName</label><input type="text" class="form-control" value="@Model.UserName" placeholder=""></div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12"><label class="labels">Mobile Number</label><input type="text" class="form-control" placeholder="" value="@Model.PhoneNumber"></div>
                        <div class="col-md-12"><label class="labels">Address </label><input type="text" class="form-control" placeholder="@Model.Adress" value=""></div>
                        <div class="col-md-12"><label class="labels">Status</label><input type="text" class="form-control" placeholder="" value="@Model.Status"></div>
                        <div class="col-md-12"><label class="labels">StatusİnCompany</label><input type="text" class="form-control" placeholder="" value="@Model.StatusİnCompany"></div>
                        <div class="col-md-12"><label class="labels">Aboute</label><input type="text" class="form-control" placeholder="" value="@Model.About"></div>
                        <div class="col-md-12"><label class="labels">Facebook</label><input type="text" class="form-control" placeholder="" value="@Model.Facebook"></div>
                        <div class="col-md-12"><label class="labels">İnstagram</label><input type="text" class="form-control" placeholder="" value="@Model.İnstagram"></div>
                        <div class="col-md-12"><label class="labels">Telegram</label><input type="text" class="form-control" placeholder="" value="@Model.Telegram"></div>
                    </div>
                
                    <div class="mt-5 text-center"> <a href="~/Admin/User/Update/@Model.Id" class="btn btn-primary profile-button">Edit profile</a></div>
                </div>
            </div>
            
        </div>
    </div>
   


