@{
    ViewData["Title"] = "Index";
    Layout = "~/areas/admin/views/shared/adminlayout.cshtml";
}



<head>
    <link href="~/AdminTema/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/AdminTema/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/AdminTema/css/animate.css" rel="stylesheet">
    <link href="~/AdminTema/css/plugins/dropzone/basic.css" rel="stylesheet">
    <link href="~/AdminTema/css/plugins/dropzone/dropzone.css" rel="stylesheet">
    <link href="~/AdminTema/css/plugins/jasny/jasny-bootstrap.min.css" rel="stylesheet">
    <link href="~/AdminTema/css/plugins/codemirror/codemirror.css" rel="stylesheet">
    <link href="~/AdminTema/css/style.css" rel="stylesheet">
</head>

<div class="row">
    <div class="col-lg-12">
        <h2> <i class="fa fa-archive"></i> <span class="nav-label">  Portfolio Category </span></h2>
    </div>
</div>
<div class="row">
    <button class="btn btn btn-info  m-3" id="btnid">
        Add New Service
    </button>
</div>
<div >
    <div class="container" >
        <div class="row">
            <div class="col-lg-offset-2 col-lg-12" style="display:none;" id="boxcon">
                <div class="ibox">
                    <div class="ibox-title">
                        <h5>Porefolio Category Add</h5>
                        <div class="ibox-tools">
                        
                        </div>
                    </div>
                    <div class="ibox-content">
                        <form method="post" enctype="multipart/form-data" autocomplete="off">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Name<text class="text text-danger">*</text></label>
                                <div class="col-sm-10"><input type="text" class="form-control" id="PName" name="Name"></div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Description<text class="text text-danger">*</text></label>
                                <div class="col-sm-10"><input type="text" class="form-control" id="PName" name="Description"></div>
                            </div>

                            <div class="hr-line-dashed"></div>
                            <div class="form-group row">
                                <label class=" col-form-label text-danger">@Html.ValidationSummary()</label>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group row">
                                <div style="margin:0px 0px 0px 30px " class="col-lg-offset-2 col-lg-4 ">
                                    <div class="form-group row">

                                        <button class="btn btn-primary  dim"  id="PBtn" type="submit">
                                            <i class="fa fa-floppy-o"></i>
                                        </button>

                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>


            @await Component.InvokeAsync("GetPortfolioAll")

        </div>
    </div>
</div>


