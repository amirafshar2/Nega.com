
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<h2>Update Package</h2>
<br />
@model Nega.com.Areas.Admin.Models.PackageModel
<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-content">
                <form method="post" enctype="multipart/form-data" autocomplete="off">

                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Package Name</label>

                        <div class="col-sm-10"><input type="text" class="form-control" id="PName" name="Name" value="@ViewBag.Name"></div>
                    </div>
                    <div class="hr-line-dashed"></div>

                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Title</label>

                        <div class="col-sm-10"><input type="text" class="form-control" id="PTitle" name="Title" value="@ViewBag.Tit"></div>
                    </div>
                    <div class="hr-line-dashed"></div>


                    <div class="form-group  row">
                        <label class="col-sm-2 col-form-label">Price</label>

                        <div class="col-sm-10"><input type="text" class="form-control" id="PPrice" name="Price" value="@ViewBag.Price"></div>
                    </div>
                    <div class="hr-line-dashed"></div>


                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Content</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" name="Content" style="height: 150px;" id="PContent">@ViewBag.Content</textarea>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    

                    <div class="form-group row">
                        <img src="~/image/Pack/@ViewBag.Pic" id="preview"    class="card-img-top m-2 p-2 " alt="Card image" style="display:flex" />
                        <div class="custom-file">
                            <input id="logo" type="file" class="custom-file-input" name="Picture">
                            <label for="logo" class="custom-file-label">Choose file...</label>
                        </div>

                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group  row">
                        <label class=" col-form-label text-danger "></label>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-4 col-sm-offset-2">
                            <button class="btn btn-primary btn-sm" id="PBtn" type="submit">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $('.custom-file-input').on('change', function () {
        let fileName = $(this).val().split('\\').pop();
        $(this).next('.custom-file-label').addClass("selected").html(fileName);
        if (this.files && this.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                console.log("Resim yükleniyor...");
                $('#preview').attr('src', '');
                $('#preview').attr('src', e.target.result);
            }
            reader.readAsDataURL(this.files[0]);
        }
    });


</script><!-- jQuery library -->
<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>

<!-- Popper JS -->
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>