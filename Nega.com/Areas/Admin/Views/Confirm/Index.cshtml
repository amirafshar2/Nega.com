







@{
    Layout = null;
}







@model Negacom.Areas.Admin.Models.ConfirmModel
<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title> Login</title>

    <link href="~/AdminTema/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/AdminTema/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/AdminTema/css/animate.css" rel="stylesheet">
    <link href="~/AdminTema/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <div>


                <a href="~/Nega/Index"> <img src="~/simba/negadark.png" style="width:60%;" /></a>
            </div>
           
            <p>

            </p>
            <p> <strong>Your Email :</strong> @TempData["mail"]</p>
            <form class="m-t" action="/Admin/Confirm/Index" method="post">
                <div class="form-group">
                    
                </div>
                <div class="form-group" style="display:none;">
                    <input type="text" class="form-control" placeholder="Confirm Code" value="@TempData["mail"]" name="Email" required="">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Confirm Code" name="Confirm" required="">
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Confirm</button>

                <a class="btn btn-sm btn-white btn-block" href="~/Admin/User/Reqister">Go To The Register</a>
            </form>
            <p class="m-t"> <small> @DateTime.Now.Year</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/AdminTema/js/jquery-3.1.1.min.js"></script>
    <script src="~/AdminTema/js/popper.min.js"></script>
    <script src="~/AdminTema/js/bootstrap.js"></script>

</body>

</html>
