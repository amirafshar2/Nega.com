@{
    ViewData["Title"] = "Update";
    Layout = "~/areas/admin/views/shared/adminlayout.cshtml";
}

<head>
    <link href="~/AdminTema/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/AdminTema/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/AdminTema/css/animate.css" rel="stylesheet">
    <link href="~/AdminTema/css/plugins/dropzone/basic.css" rel="stylesheet">
    <link href="~/AdminTema/css/plugins/dropzone/dropzone.css" rel="stylesheet">
    <link href="~/AdminTema/css/plugins/jasny/jasny-bootstrap.min.css" rel="stylesheet">
    <link href="~/AdminTema/css/plugins/codemirror/codemirror.css" rel="stylesheet">
    <link href="~/AdminTema/css/style.css" rel="stylesheet">
</head>

<div class="row">
    <div class="col-lg-12">
        <h2> <i class="fa fa-briefcase"></i> <span class="nav-label"> Update Portfolio </span></h2>
    </div>
</div>


<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Portfolio Update</h5>
                    <div class="ibox-tools">
                    </div>
                </div>
                <div class="ibox-content">
                    <form method="post" enctype="multipart/form-data" autocomplete="off">



                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Title<text class="text text-danger">*</text></label>
                            <div class="col-sm-10"><input type="text" class="form-control" name="Title" value="@ViewBag.Tit" id="Title"></div>
                        </div>
                        <div class="hr-line-dashed"></div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Brand<text class="text text-danger">*</text></label>
                            <div class="col-sm-10"><input type="text" class="form-control" name="Brand" value="@ViewBag.Brand " id="Brand"></div>
                        </div>
                        <div class="hr-line-dashed"></div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Link<text class="text text-danger">*</text></label>
                            <div class="col-sm-10"><input type="text" class="form-control" value="@ViewBag.Link" name="Link" maxlength="60" id="Link"></div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div>
                            <div class="form-group row">
                                <label for="CategoryId">Category<text class="text text-danger">*</text></label>
                                <select id="CategoryId" name="categoryid" class="form-control">
                                    <option value=""> @ViewBag.Categor</option>

                                    @if (ViewBag.Category != null)
                                    {
                                        @foreach (var category in @ViewBag.Category)
                                        {
                                            <option value="@category.Value"> @category.Text</option>
                                        }
                                    }


                                </select>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row">
                            <img id="preview1" src="~/image/Pack/@ViewBag.Picture" alt="Resim önizleme" style="display:flex;" class="card-img-top m-2 p-2" />
                            <div class="custom-file">
                                <input id="logo1" type="file" name="Picture" class="custom-file-input Pic">
                                <label for="logo1" class="custom-file-label">Choose file...<text class="text text-danger">*</text></label>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>

                        <div class="form-group row">
                            <label class=" col-form-label text-danger">@Html.ValidationSummary()</label>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row">
                            <div class="col-sm-4 col-sm-offset-2">
                                <div class="form-group row">

                                    <button class="btn btn-primary  dim" id="PBtn" type="submit">
                                        <i class="fa fa-floppy-o"></i>
                                    </button>

                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>



    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>


<script src="~/AdminTema/js/jquery-3.1.1.min.js"></script>
<script src="~/AdminTema/js/popper.min.js"></script>
<script src="~/AdminTema/js/bootstrap.js"></script>
<script src="~/AdminTema/js/plugins/metisMenu/jquery.metisMenu.js"></script>
<script src="~/AdminTema/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>
<script src="~/AdminTema/js/inspinia.js"></script>
<script src="~/AdminTema/js/plugins/pace/pace.min.js"></script>
<script src="~/jsadmin/refjs/script.js"></script>
<script src="~/jsadmin/service/javascript.js"></script>


