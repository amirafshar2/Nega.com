@{
    Layout = null;
}


@model Negacom.Areas.Admin.Models.UserSignin
<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title> Login</title>

    <link href="~/AdminTema/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/AdminTema/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/AdminTema/css/animate.css" rel="stylesheet">
    <link href="~/AdminTema/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <div>


                <a href="~/Nega/Index"> <img src="~/simba/negadark.png" style="width:60%;" /></a>
            </div>
            <h3>Welcome to Nega</h3>
            <p>

            </p>
            <p>Login in</p>
            <form class="m-t" action="/Admin/Login/Index" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="UserName" name="UserName" required="">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Password" name="Password" required="">
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Login</button>

                <a href="#"><small>Forgot password?</small></a>
                <p class="text-muted text-center"><small>Do not have an account?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="~/Admin/User/Reqister">Create an account</a>
            </form>
            <p class="m-t"> <small> @DateTime.Now.Year</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/AdminTema/js/jquery-3.1.1.min.js"></script>
    <script src="~/AdminTema/js/popper.min.js"></script>
    <script src="~/AdminTema/js/bootstrap.js"></script>

</body>

</html>
