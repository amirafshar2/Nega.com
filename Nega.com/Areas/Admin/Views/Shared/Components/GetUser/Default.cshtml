@model IEnumerable<BE.User>
@foreach (var item in Model)
{
    <div class="col-lg-6">
        <div class="row animated fadeInRight">
            <div class="col-md-12 p-2">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Profile Detail</h5>
                    </div>
                    <div>
                        <div class="ibox-content no-padding ">
                            <img alt="Choose profile Picture" class="img-fluid" src="~/image/Pack/@item.Picture">
                        </div>
                        <div class="ibox-content profile-content">
                            <div class="row">
                                <div class="col-lg-12">
                                    <h4><strong>@item.Name @item.Family</strong></h4>
                                </div>
                                <div class="col-6"><h5><Strong> IdNumber          :</Strong> </h5> <p>@item.IdNumber           </p></div>
                                <div class="col-6"><h5><Strong> Phone Number      :</Strong> </h5> <p>@item.PhoneNumber        </p></div>
                                <div class="col-6"><h5><Strong> Adress            :</Strong> </h5> <p>@item.Address            </p></div>
                                <div class="col-6"><h5><Strong> Email             :</Strong> </h5> <p>@item.Email              </p></div>
                                <div class="col-6"><h5><Strong> Reg Date          :</Strong> </h5> <p>@item.ReqesterDate.ToShortDateString()       </p></div>
                                <div class="col-6"><h5><Strong> Status in Company :</Strong> </h5> <p>@item.StatusİnCompany    </p></div>
                                <div class="col-6"><h5><Strong> Facebook          :</Strong> </h5> <p>@item.Facebook           </p></div>
                                <div class="col-6"><h5><Strong> İnstagram         :</Strong> </h5> <p>@item.İnstagram          </p></div>
                                <div class="col-6"><h5><Strong> Telegram          :</Strong> </h5> <p>@item.Telegram           </p></div>
                                <div class="col-6"><h5><Strong> UserName          :</Strong> </h5> <p>@item.UserName           </p></div>


                                @if (item.Status)
                                {

                                    <div class="col-6">
                                        <h5><Strong> Status          :</Strong> </h5>
                                        <input type="checkbox" class="ios8-switch ios8-switch-lg " checked id="statusCheckbox">
                                        <label for="statusCheckbox"></label>
                                        <input type="hidden" name="Status" id="statusHidden" value="true">
                                    </div>
                                }
                                else
                                {
                                    <div class="col-6">
                                        <h5><Strong> Status          :</Strong> </h5>
                                        <div class="col-sm-10">
                                            <input type="checkbox" class="ios8-switch ios8-switch-lg" id="statusCheckbox">
                                            <label for="statusCheckbox"></label>
                                            <input type="hidden" name="Status" id="statusHidden" value="false">
                                        </div>
                                    </div>
                                }
                            </div>

                            <br>

                            <h5>
                                About me
                            </h5>
                            <p>
                                @item.About
                            </p>

                            <div class="user-button">
                                <div class="row">
                                    <div class="col-md-6 m-3">
                                        <button onclick="location.href='@Url.Action("Update", "Aboute", new { id = item.Id })'" class="btn btn-info  dim" type="button">
                                            <i class="fa fa-cog"></i>
                                        </button>
                                        <button onclick="confirmDelete('@item.Id')" class="btn btn-danger  dim " type="button"><i class="fa fa-trash"></i></button>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
}