@model List<BE.Blog>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@




<div class="col-lg-12">
    <div class="ibox ">
        <div class="ibox-title">
            <h5>Blog List </h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th hidden>#</th>
                            <th>Blog Name </th>
                            <th>Title </th>
                            <th>Content </th>
                            <th>Picture </th>
                            <th>Date </th>
                            <th>Status</th>
                            <th>UserName</th>
                            <th>UserPicture</th>
                            <th>Blog</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            
                            <tr>                                
                                <td hidden>@item.id</td>
                                <td>@item.Name</td>
                                <td>@item.Title</td>
                                <td>
                                    @if (item.Content.Length > 50)
                                    {
                                        <p>
                                        @Html.Raw(item.Content.Substring(0, 50))
                                        </p>
                                    }
                                    else
                                    {
                                        <p>
                                        @Html.Raw(item.Content)
                                        </p>
                                    }
                                </td>
                                <td><img src="~/image/Pack/@item.Picture" style="width:50px; height:50px;"/></td>
                                <td><span > @item.Date.ToShortDateString()</span></td>
                                <td>@item.Status</td>
                                <td>@item.User.UserName</td>
                                <td><img src="~/image/Pack/@item.User.Picture" style="width:50px; height:50px;" /></td>
                                <td> <a class="btn btn-success" href="~/BlogDet/Index/@item.id">Show Blog </a></td>
                            </tr>
                            
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>