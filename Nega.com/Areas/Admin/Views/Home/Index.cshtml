@{
    ViewData["Title"] = "Index";
    Layout = "~/areas/admin/views/shared/adminlayout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<style>
    .butt{
        height: 61px;
        width: 80px;
    }
</style>
@if (User.Identity.IsAuthenticated)
{
    <div class="row" style="margin-top:9px">
        <div class="col-lg-3">
            @await Component.InvokeAsync("UserTotal")
        </div>
        <div class="col-lg-3">
            @await Component.InvokeAsync("BlogTotal")
        </div>
        <div class="col-lg-3">
            @await Component.InvokeAsync("VisitorCount")
        </div>
        <div class="col-lg-3">
            @await Component.InvokeAsync("CommentCount")
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12" style="margin: 0% 0% 1% 4%;">
            <button class=" butt btn btn-outline btn-primary dim" onclick="window.location.href='Admin/Home/Index';" type="button">             <i class="fa fa-home          fa-2x "></i></button>
            <button class=" butt btn btn-outline btn-warning dim"  onclick="window.location.href='/Admin/Aboute/Index';" type="button">         <i class="fa fa-info-circle   fa-2x "></i></button>
            <button class=" butt btn btn-outline btn-primary dim"  onclick="window.location.href='/Admin/CustomerComment/Index';" type="button"><i class="fa  fa-commenting-o fa-2x "></i></button>
            <button class=" butt btn btn-outline btn-success  dim" onclick="window.location.href='/Admin/Package/Index';" type="button">        <i class="fa fa-cart-plus     fa-2x "></i></button>
            <button class=" butt btn btn-outline btn-info  dim"    onclick="window.location.href='/Admin/Portfolio/Index';" type="button">      <i class="fa fa-archive       fa-2x "></i> </button>
            <button class=" butt btn btn-outline btn-warning  dim" onclick="window.location.href='/Admin/Ref/Index';" type="button">            <i class="fa fa-briefcase     fa-2x "></i></button>
            <button class=" butt btn btn-outline btn-danger  dim " onclick="window.location.href='/Admin/Service/Index';" type="button">        <i class="fa fa-cogs          fa-2x "></i></button>
            <button class=" butt btn btn-outline btn-primary dim"  onclick="window.location.href='/Admin/Video/Index';" type="button">          <i class="fa fa-youtube       fa-2x "></i></button>
            <button class=" butt btn btn-outline btn-warning dim"  onclick="window.location.href='/Admin/User/Index';" type="button">           <i class="fa fa-user          fa-2x "></i></button>
            <button class=" butt btn btn-outline btn-primary dim"  onclick="window.location.href='/Admin/Role/Index';" type="button">           <i class="fa  fa-users        fa-2x "></i></button>
            <button class=" butt btn btn-outline btn-success  dim" onclick="window.location.href='/Admin/BlogCategory/Index';" type="button">   <i class="fa fa-puzzle-piece  fa-2x "></i></button>
            <button class=" butt btn btn-outline btn-info  dim"    onclick="window.location.href='/Admin/Blog/Index';" type="button">           <i class="fa fa-columns       fa-2x "></i> </button>
            <button class=" butt btn btn-outline btn-warning  dim" onclick="window.location.href='/Admin/BlogComment/Index';" type="button">    <i class="fa fa-comments      fa-2x "></i></button>
            <button class=" butt btn btn-outline btn-danger  dim " onclick="window.location.href='/Admin/Contect/Index';" type="button">        <i class="fa fa-plug          fa-2x "></i></button>
        </div>
    </div>
    <div class="row">

        @await Component.InvokeAsync("GetBlogListForDashbourd")

    </div>
    <div class="row">
        <div class="col-lg-12">
            @await Component.InvokeAsync("GetCommentForDashbourd")
        </div>
    </div>

    
}
