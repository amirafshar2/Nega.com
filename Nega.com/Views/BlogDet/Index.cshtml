@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/NegaDetaleLayout.cshtml";
}




@model BE.Blog
<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i&display=swap" rel="stylesheet">

    <title>Blog</title>

    <!-- Bootstrap core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .heading-page.header-text {
            text-align: right; /* Metni sağa hizalar */
        }

        .text-content h4,
        .text-content h2 {
            text-align: right; /* Başlıkları sağa hizalar */
        }

    </style>

    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/551/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/551/assets/css/templatemo-stand-blog.css">
    <link rel="stylesheet" href="~/551/assets/css/owl.css">

</head>

<body>


    <div style="margin:-112px 0px; width:100%;" class="heading-page header-text" dir="rtl">
        <section class="page-heading">
            <div class="container">
                <div class="row">
                    <div class="offset-lg-1 col-lg-11">
                        <div class="text-content">
                            <h4 style=" color: #59c29d;">جزییات بلاگ</h4>
                            <h2>@Model.Name</h2>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- Banner Ends Here -->




    <section class="blog-posts grid-system">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="all-blog-posts">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="blog-post">
                                    <div class="blog-thumb">
                                        <img src="~/image/Pack/@Model.Picture" alt="">
                                    </div>
                                    <div class="down-content">
                                        <h3 style=" color: #59c29d;">@Model.Title</h3>

                                        <ul class="post-info">
                                            <li><a href="#">@Model.User.StatusİnCompany</a></li>
                                            @{
                                                TimeSpan timeSince = DateTime.Now - Model.Date;
                                                string formattedTime = FormatTimeSpan(timeSince);
                                            }


                                            <li><a href="#"> @formattedTime</a></li>
                                            <li><a href="#">10 Comments</a></li>
                                        </ul>
                                        <p>
                                           @Html.Raw(Model.Content)
                                        </p>
                                        <div class="post-options">
                                            <div class="row">
                                                
                                                <div class="col-6">
                                                    <ul class="post-share">
                                                        <li><i class="fa fa-share-alt"></i></li>
                                                        <li><a href="@Model.User.Facebook">فیسبوک نویسنده</a>,</li>
                                                        <li><a href="@Model.User.İnstagram"> اینستاگرام نویسنده</a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                            </div>
                            <div class="col-lg-12">
                                <div class="sidebar-item submit-comment">
                                    <div class="sidebar-heading">
                                        <h2>نظر شما</h2>
                                    </div>
                                    <div class="content">
                                        <form id="comment" action="#" method="post">
                                            <div class="row">
                                                <div class="col-md-6 col-sm-12">
                                                    <fieldset>
                                                        <input name="name" type="text" id="name" placeholder="اسم و فامیلی" required="">
                                                    </fieldset>
                                                </div>
                                                <div class="col-md-6 col-sm-12">
                                                    <fieldset>
                                                        <input name="email" type="text" id="email" placeholder="آدرس پست الکترنیکی" required="">
                                                    </fieldset>
                                                </div>
                                                <div class="col-md-12 col-sm-12">
                                                    <fieldset>
                                                        <input name="subject" type="text" id="subject" placeholder="موضوع">
                                                    </fieldset>
                                                </div>
                                                <div class="col-lg-12">
                                                    <fieldset>
                                                        <textarea name="message" rows="6" id="message" placeholder="نطر خود را بویسید" required=""></textarea>
                                                    </fieldset>
                                                </div>
                                                <div class="col-lg-12">
                                                    <fieldset>
                                                        <button type="submit" id="form-submit" style="background-color: #59c29d;" class="btn btn-success">ثبت نظر</button>
                                                    </fieldset>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="sidebar">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="sidebar-item search">
                                    <form id="search_form" name="gs" method="GET" action="#">
                                        <input type="text" name="q" class="searchText" placeholder="جستوجو..." autocomplete="on">
                                    </form>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="sidebar-item recent-posts">
                                    <div class="sidebar-heading">
                                        <h2>آخرین پست ها</h2>
                                    </div>
                                    <div class="content">
                                        <ul>
                                            <li>
                                                <a href="post-details.html">
                                                    <h5>فرق بین وب سایت های وردپرس و برنامه نوسی شده</h5>
                                                    <span>2 روز پیش</span>
                                                </a>
                                            </li>
                                           
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="sidebar-item categories">
                                    <div class="sidebar-heading">
                                        <h2>دسته بندی بلاگ ها</h2>
                                    </div>
                                    <div class="content">
                                        <ul>
                                            <li><a href="#">- Nature Lifestyle</a></li>
                                            <li><a href="#">- Awesome Layouts</a></li>
                                            <li><a href="#">- Creative Ideas</a></li>
                                            <li><a href="#">- Responsive Templates</a></li>
                                            <li><a href="#">- HTML5 / CSS3 Templates</a></li>
                                            <li><a href="#">- Creative &amp; Unique</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


</body>

</html>



<!-- Bootstrap core JavaScript -->
<script src="~/551/vendor/jquery/jquery.min.js"></script>
<script src="~/551/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>


<!-- Additional Scripts -->
<script src="~/551/assets/js/custom.js"></script>
<script src="~/551/assets/js/owl.js"></script>
<script src="~/551/assets/js/slick.js"></script>
<script src="~/551/assets/js/isotope.js"></script>
<script src="~/551/assets/js/accordions.js"></script>


<script language="text/Javascript">
    cleared[0] = cleared[1] = cleared[2] = 0; //set a cleared flag for each field
    function clearField(t) {                   //declaring the array outside of the
        if (!cleared[t.id]) {                      // function makes it static and global
            cleared[t.id] = 1;  // you could use true and false, but that's more typing
            t.value = '';         // with more chance of typos
            t.style.color = '#fff';
        }
    }
    @functions {
        string FormatTimeSpan(TimeSpan timeSpan)
        {
            if (timeSpan.TotalSeconds < 60)
            {
                return "چند سانیه ی پیش";
            }
            else if (timeSpan.TotalMinutes < 60)
            {
                return $"{(int)timeSpan.TotalMinutes} دقیقه گذشته ";
            }
            else if (timeSpan.TotalHours < 24)
            {
                return $"{(int)timeSpan.TotalHours} ساعت گذشته";
            }
            else if (timeSpan.TotalDays < 7)
            {
                return $"{(int)timeSpan.TotalDays}  روز گذشته";
            }
            else
            {
                int weeks = (int)(timeSpan.TotalDays / 7);
                return $"{weeks} هفته گذشته";
            }
        }
    }
</script>



