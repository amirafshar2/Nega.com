@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/NegaDetaleLayout.cshtml";
}






@model BE.Package





<!DOCTYPE html>
<html lang="fa">

<head>

    <!-- Metas -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="keywords" content="HTML5 Template Simba onepage">
    <meta name="description" content="Simba - Onepage Multi-Purpose HTML5 Template">
    <meta name="author" content="">

    <!-- Title  -->
    <title></title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/simbs/img/favicon.ico">

    <!-- Plugins -->
    <link rel="stylesheet" href="~/simbs/css/plugins.css">

    <!-- Core Style Css -->
    <link rel="stylesheet" href="~/simbs/css/style.css">

    <!-- Theme Color -->
    <meta name="theme-color" content="#01BF81" />

</head>

<body>

    <!-- =====================================
    ==== Start Loading -->

    <div class="loading">
        <div class="text-center middle">
            <div class="lds-ellipsis"><div></div><div></div><div></div><div></div></div>
        </div>
    </div>


    <!-- =====================================
    ==== Start Header -->

    <header class="page-header valign bg-img" data-overlay-dark="8" data-background="/image/Pack/@Model.Picture" data-stellar-background-ratio="0.5">

        <div class="container">
            <div class="row">
                <div class="full-width text-center caption mt-30">

                    <h1>@Model.Name</h1>
                    @{
                        string content = Model.Content.Length > 100 ? Model.Content.Substring(0, 100) : Model.Content;
                    }

                    <p>@content ...</p>
                </div>
            </div>
        </div>
    </header>

    <!-- End Header ====
    ======================================= -->
    <!--====== Blog ======-->
