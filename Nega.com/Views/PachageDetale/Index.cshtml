            <div class="row">

                <div class="col-lg-12">
                    <div class="posts blog mb-md50">

                        <div class="item">
                            <div>
                                @if (Model.Title != null)
                                {
                                    <div class="row">

                                        <div class="col-lg-6 about box-padding">
                                            <div class=" skills box-padding">
                                                <br />
                                                <h6 class="sub-title">@Model.Title</h6>
                                                <br />
                                                <p>@Model.Content</p>
                                                <br />
                                            </div>
                                        </div>

                                        <div class="col-lg-6 bg-img bg-center" data-background=" /image/Pack/@Model.Picture"></div>
                                    </div>
                                }
