@model IEnumerable<BE.Services>

@if (Model.Count() != 0)
{
    <section class="hero section-padding" data-scroll-index="1">
        <div class="container">
            <div class="row">

                <div class="offset-lg-2 col-lg-8">
                    <div class="intro text-center mb-80">
                        <h6 class="sub-title">معرفی</h6>
                        <h4 class="mb-20">خدماتی که ارائه می‌دهیم</h4>
                        <p>ما  خدمات متنوعی را در زمینه طراحی وب، توسعه اپلیکیشن‌های موبایل و نرم‌افزارهای ویندوز ارائه می‌دهیم. هدف ما این است , با استفاده از جدیدترین فناوری‌ها و بهترین طراحی‌ها، به کسب و کار شما کمک کنیم تا در دنیای دیجیتال موفق باشد. تیم ما متعهد به ارائه خدمات با کیفیت بالا و پشتیبانی مداوم است تا اطمینان حاصل شود که نیازهای شما به بهترین نحو ممکن برآورده می‌شود</p>
                    </div>
                </div>
                @foreach (var item in Model)
                {
                    <div class="col-lg-3 col-md-6">
                        <div class="item mb-30">
                            <span class="icon lnr @item.ICone"></span>
                            <h6>@item.Title</h6>
                            <p>@item.Content</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}