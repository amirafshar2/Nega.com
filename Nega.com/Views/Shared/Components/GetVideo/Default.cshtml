@model IEnumerable<BE.Video>
<div class="video section-padding text-center bg-img" data-overlay-dark="8" data-background="/simba/img/bg4.jpg" data-stellar-background-ratio="0.5">
    <div class="container">
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="offset-lg-2 col-lg-8">
                    <h4>@item.Title</h4>
                    <p>@item.Content</p>
                    <a class="vid" href="@item.VideoLink">
                        <span class="vid-butn">
                            <i class="far fa-play-circle"></i>
                        </span>
                    </a>
                </div>

            </div>
        }
    </div>
</div>