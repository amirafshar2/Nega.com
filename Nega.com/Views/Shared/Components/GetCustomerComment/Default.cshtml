@model IEnumerable<BE.CustomerComment>


@if (Model.Count() != 0)
{
    <section class="testimonials section-padding bg-img bg-fixed bg-center" data-overlay-dark="7" data-background="/simba/img/bg3.jpg">
        <div class="container">
            <div class="row">

                <div class="section-head col-lg-4">
                    <h4>آنچه <span>مشتریان</span> می‌گویند</h4>

                </div>

                <div class="owl-carousel owl-theme col-lg-8">
                    @foreach (var item in Model)
                    {
                        <div class="item-box">
                            <span class="quote">
                                <img src="" alt="">
                            </span>
                            <p>
                                @{
                                    var con = item.Content.ToString();
                                    // İçeriği 200 karaktere kısalt
                                    string connt = con.Length > 100 ? con.Substring(0, 100) : con;
                                    // Son kelimenin tam olarak kesildiğinden emin ol
                                    connt = connt.Substring(0, connt.LastIndexOf(" "));
                                }
                                @Html.Raw(connt)
                            </p>
                            <div class="info">
                                <div class="author-img">
                                    <img src="~/image/Pack/@item.Picture" alt="">
                                </div>
                                <div class="cont">
                                    <h6>@item.NameSurName</h6>
                                    <span>@item.Brand</span>
                                    <div class="rate">
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
    </section>
   
}