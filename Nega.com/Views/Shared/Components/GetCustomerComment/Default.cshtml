@model IEnumerable<BE.CustomerComment>



@foreach (var item in Model)
{
    <div class="item-box">
        <span class="quote">
            <img src="~/image/Pack/@item.Picture" alt="">
        </span>
        <p>@item.Content</p>
        <div class="info">
            <div class="author-img">
                <img src="~/image/Pack/@item.Picture" alt="">
            </div>
            <div class="cont">
                <h6>@item.NameSurName</h6>
                <span>@item.Brand</span>
                <div class="rate">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                </div>
            </div>
        </div>
    </div>

}